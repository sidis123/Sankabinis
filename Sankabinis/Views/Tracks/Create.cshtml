@model Sankabinis.Models.Track

@{
    ViewData["Title"] = "Create Track";
}

<h1>Create Track</h1>

<h4>Track</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTrack">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">City</label>
                <select id="cityName" class="form-control" asp-items="@ViewBag.CityNames"></select>
                <!-- Hidden input to store the selected city name -->
                <input type="hidden" id="cityNameHidden" name="CityName" />
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Start coordinates</label>
                <input asp-for="start_coordinates" class="form-control" />
                <span asp-validation-for="start_coordinates" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Finish coordinates</label>
                <input asp-for="finish_coordinates" class="form-control" />
                <span asp-validation-for="finish_coordinates" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Track name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Track picture (URL)</label>
                <input asp-for="image" class="form-control" type="url" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal for displaying created track information -->
<div class="modal " id="trackInfoModal" tabindex="-1" role="dialog" aria-labelledby="trackInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="trackInfoModalLabel">New Track Created</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="trackInfoModalBody">
                <!-- Track information will be displayed here -->
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index", "Tracks")" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Update hidden input with selected city name
            $('#cityName').change(function () {
                $('#cityNameHidden').val($(this).val());
            });

            // Handle form submission
            $('form').submit(function (e) {
                $('#cityName').trigger('change');
                e.preventDefault(); // Prevent default form submission
                $.ajax({
                    url: $(this).attr('action'), // Form action URL
                    type: $(this).attr('method'), // Form method (POST)
                    data: $(this).serialize(), // Form data
                    success: function (response) {
                        if (response.success) {
                            // If track creation was successful, display modal
                            displayTrackModal(response.track);
                        } else {
                            // Handle errors if needed
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle errors if needed
                    }
                });
            });

            // Function to display modal with track information
            function displayTrackModal(track) {
                $('#trackInfoModalBody').html(""); // Clear previous content

                const staticMapURL = `https://maps.googleapis.com/maps/api/staticmap?size=600x300&markers=label:A|${track.start_coordinates}&markers=label:B|${track.finish_coordinates}&key=AIzaSyCbzBDXZu1UKZEh_XlBOYo3qX14fIBGJ5o`;
                // Populate modal with track information
                $('#trackInfoModalBody').append(`
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label><strong>Track Name:</strong></label>
                                <p class="form-control">${track.name}</p>
                            </div>
                            <div class="form-group">
                                <label><strong>Start Coordinates:</strong></label>
                                <p class="form-control">${track.start_coordinates}</p>
                            </div>
                            <div class="form-group">
                                <label><strong>Finish Coordinates:</strong></label>
                                <p class="form-control">${track.finish_coordinates}</p>
                            </div>
                            <div class="form-group">
                                <label><strong>Image:</strong></label>
                                <img src="${track.image}" alt="Track Image" class="img-fluid">
                            </div>
                            <div class="form-group">
                                <label><strong>Static Map:</strong></label>
                                <img src="${staticMapURL}" alt="Static Map" class="img-fluid">
                           </div>
                        </div>
                    </div>
                `);

                $('#trackInfoModal').modal('show'); // Show modal
            }
        });
    </script>
}
