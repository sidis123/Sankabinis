@model IEnumerable<Sankabinis.Models.Track>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>

@if (TempData["alerts"] != null)
{
    <div class="alert alert-info">
        @TempData["alerts"]
    </div>
}

<h1>Tracks</h1>

<p>
    <a asp-action="CreateTrack">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pavadinimas
            </th>
            <th>
                Pradžios koordinatės
            </th>
            <th>
                Pabaigos koordinatės
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.start_coordinates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.finish_coordinates)
                </td>
                <td>
                    <a href="javascript:void(0);" class="edit-track" data-id="@item.Id_Trasa">Edit</a>
                    <a href="javascript:void(0);" class="delete-track" data-id="@item.Id_Trasa">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Edit Track Modal -->
<div class="modal" id="editTrackModal" tabindex="-1" role="dialog" aria-labelledby="editTrackModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTrackModalLabel">Edit Track</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Edit Track Form will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Edit Track
            $('.edit-track').on('click', function () {
                var trackId = $(this).data('id');
                $('#editTrackModal .modal-body').html(''); // Clear modal body
                $.ajax({
                    url: '/Tracks/EditTrack/' + trackId,
                    type: 'GET',
                    success: function (data) {
                        $('#editTrackModal .modal-body').html(data);
                        $('#editTrackModal').modal('show');
                    },
                    error: function () {
                        alert('Error loading edit form.');
                    }
                });
            });

            // Delete Track
            $('.delete-track').on('click', function () {
                var trackId = $(this).data('id');
                $.ajax({
                    url: '/Tracks/Delete/' + trackId, // Change to match your controller action
                    type: 'POST', // Change to POST as the action is a POST method
                    success: function (data) {
                        // Check the response from the server
                        if (data.includes('successfully')) {
                            // If track deleted successfully, show success popup
                            location.reload();
                            alert(data);                    
                        } else {
                            // If deletion failed, show error popup
                            alert(data);
                        }
                    },
                    error: function () {
                        alert('Error deleting track.');
                    }
                });
            });
        });
    </script>
}