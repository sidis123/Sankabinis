@model Sankabinis.Models.Track

<form asp-action="SubmitEditedData" method="post">
    <input type="hidden" asp-for="Id_Trasa" />
    <div class="form-group">
        <label asp-for="name" class="control-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="start_coordinates" class="control-label"></label>
        <input asp-for="start_coordinates" class="form-control" />
        <span asp-validation-for="start_coordinates" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="finish_coordinates" class="control-label"></label>
        <input asp-for="finish_coordinates" class="form-control" />
        <span asp-validation-for="finish_coordinates" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="image" class="control-label"></label>
        <input asp-for="image" class="form-control" />
        <span asp-validation-for="image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
